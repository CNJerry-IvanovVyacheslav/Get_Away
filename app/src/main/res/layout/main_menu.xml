<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/MainMenu"
        android:layout_weight="3"
        android:text="@string/main_menu_name" />

    <com.google.android.material.button.MaterialButton
        style="@style/MainMenuButton"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:text="@string/main_menu_start"
        app:cornerRadius="50dp" />

    <com.google.android.material.button.MaterialButton
        style="@style/MainMenuButton"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:text="@string/main_menu_create"
        android:textSize="@dimen/text_size_35" />

    <com.google.android.material.button.MaterialButton
        style="@style/MainMenuButton"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:text="@string/main_menu_settings" />

    <com.google.android.material.button.MaterialButton
        style="@style/MainMenuButton"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:text="@string/main_menu_about" />

</LinearLayout>